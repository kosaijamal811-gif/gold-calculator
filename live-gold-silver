<body>

<div class="unified-card">
    <div class="market-display">
        <div class="live-row">
            <span class="live-label">Gold Spot</span>
            <span id="goldSpot" class="live-price">$0.00</span>
        </div>
        <div class="live-row">
            <span class="live-label">Silver Spot</span>
            <span id="silverSpot" class="live-price" style="color:var(--silver)">$0.00</span>
        </div>
    </div>

    <div class="btn-box">
        <button id="gB" class="btn g-on" onclick="setM('G')">GOLD</button>
        <button id="sB" class="btn off" onclick="setM('S')">SILVER</button>
    </div>

    <input type="number" id="amt" value="1" oninput="recalc()">
    
    <div class="selectors">
        <select id="unt" onchange="recalc()">
            <option value="OZ">Ounce</option>
            <option value="GR">Gram</option>
        </select>
        <select id="krt" onchange="recalc()">
            <option value="24">24 Karat</option>
            <option value="21">21 Karat</option>
            <option value="18">18 Karat</option>
        </select>
    </div>

    <div class="total-box">
        <div id="res" class="final-val">--</div>
        <div style="font-size: 10px; color: #444; font-weight: bold;">TOTAL MARKET VALUE (USD)</div>
        <div class="status">‚óè LIVE MODE</div>
    </div>
</div>

<script>
let rates = { gold: 2035.00, silver: 23.90 };
let mode = 'G';
const OZ = 31.1035;

function updateSpot() {
    document.getElementById('goldSpot').innerText = '$' + rates.gold.toFixed(2);
    document.getElementById('silverSpot').innerText = '$' + rates.silver.toFixed(2);
}

function setM(m) {
    mode = m;
    document.getElementById('gB').className = m === 'G' ? 'btn g-on' : 'btn off';
    document.getElementById('sB').className = m === 'S' ? 'btn s-on' : 'btn off';
    document.getElementById('krt').style.display = m === 'G' ? 'block' : 'none';
    recalc();
}

function recalc() {
    const q = +document.getElementById('amt').value || 0;
    const u = document.getElementById('unt').value;
    const k = document.getElementById('krt').value;
    const out = document.getElementById('res');

    let spot = mode === 'G' ? rates.gold : rates.silver;
    let price;

    if (mode === 'G') {
        let g24 = spot / OZ;
        let r = k == 24 ? 1 : k == 21 ? 0.875 : 0.75;
        price = u === 'OZ' ? spot * r : g24 * r;
    } else {
        price = u === 'OZ' ? spot : spot / OZ;
    }

    out.innerText = '$' + (q * price).toFixed(2);
}

updateSpot();
recalc();
</script>

</body>
