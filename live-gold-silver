        :root { --gold: #FFD700; --silver: #E2E2E2; --bg: #000; }
        * { box-sizing: border-box; margin: 0; padding: 0; font-family: 'Segoe UI', sans-serif; }
        body { background: transparent; color: white; display: flex; justify-content: center; padding: 10px; }

        .unified-card { 
            width: 100%; max-width: 380px; background: var(--bg); border: 2px solid #222; 
            border-radius: 20px; padding: 20px; text-align: center; box-shadow: 0 10px 40px rgba(0,0,0,0.8);
        }

        .market-display { 
            background: #111; border-radius: 15px; padding: 15px; margin-bottom: 20px; 
            border: 1px solid #333; display: flex; flex-direction: column; gap: 8px;
        }
        .live-row { display: flex; justify-content: space-between; align-items: center; }
        .live-label { font-size: 11px; font-weight: 800; color: #555; text-transform: uppercase; }
        .live-price { font-size: 18px; font-weight: 900; color: var(--gold); font-family: monospace; }

        .btn-box { display: flex; gap: 8px; margin-bottom: 20px; }
        .btn { flex: 1; padding: 14px; border: none; border-radius: 12px; font-size: 14px; font-weight: 900; cursor: pointer; }
        .g-on { background: var(--gold); color: black; }
        .s-on { background: var(--silver); color: black; }
